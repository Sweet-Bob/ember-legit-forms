{{#lf-input-wrapper
  errorMessages=errorMessages
  label=label
  labelComponent=labelComponent
  errorMessagesComponent=errorMessagesComponent
  showErrorMessages=showErrorMessages
}}
  <textarea
    class="form-control"
    value={{property}}
    onkeyup={{action "valueChanged" value="target.value"}}
    onblur={{action "valueChanged" value="target.value"}}
    rows={{rows}}
    placeholder={{placeholder}}
  />
{{/lf-input-wrapper}}
