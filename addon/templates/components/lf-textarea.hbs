{{#lf-input-wrapper
  errorMessages=errorMessages
  label=label
  labelFor=id
  labelComponent=labelComponent
  errorMessagesComponent=errorMessagesComponent
  showErrorMessages=showErrorMessages
}}
  <textarea
    id=id
    value={{property}}
    class={{or inputClass 'form-control'}}
    oninput={{action "valueChanged" value="target.value"}}
    rows={{rows}}
    placeholder={{placeholder}}
    disabled={{disabled}}
    readonly={{readonly}}
    autocomplete={{autocomplete}}
    autofocus={{autofocus}}
    cols={{cols}}
    maxlength={{maxlength}}
    minlength={{minlength}}
    spellcheck={{spellcheck}}
    tabindex={{tabindex}}
    wrap={{wrap}}></textarea>
{{/lf-input-wrapper}}
