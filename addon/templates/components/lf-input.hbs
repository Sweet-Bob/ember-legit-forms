{{#lf-input-wrapper
  errorMessages=errorMessages
  label=label
  labelComponent=labelComponent
  errorMessagesComponent=errorMessagesComponent
  showErrorMessages=validationStateVisible
}}
  {{#if hasBlock}}
    <div class="input-group">
      {{#if (eq addonPlacement 'before')}}
        {{yield}}
      {{/if}}
      {{one-way-input
        value=property
        update=(action "valueChanged")
        placeholder=placeholder
        type=type
        disabled=disabled
        readonly=readonly
        class="form-control"
      }}
      {{#if (eq addonPlacement 'after')}}
        {{yield}}
      {{/if}}
    </div>
  {{else}}
      {{one-way-input
        value=property
        update=(action "valueChanged")
        placeholder=placeholder
        type=type
        disabled=disabled
        readonly=readonly
        class="form-control"
      }}
  {{/if}}
{{/lf-input-wrapper}}
