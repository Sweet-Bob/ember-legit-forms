{{#lf-input-wrapper
  errorMessages=errorMessages
  label=label
  labelFor=id
  labelComponent=labelComponent
  errorMessagesComponent=errorMessagesComponent
  showErrorMessages=validationStateVisible
}}
  {{#if hasBlock}}
    <div class="input-group">
      {{#if (eq addonPlacement 'before')}}
        {{yield}}
      {{/if}}
      <input
        id={{id}}
        value={{property}}
        oninput={{action "valueChanged" value="target.value"}}
        placeholder={{placeholder}}
        type={{type}}
        disabled={{disabled}}
        readonly={{readonly}}
        autofocus={{autofocus}}
        accept={{accept}}
        autocomplete={{autocomplete}}
        height={{height}}
        width={{width}}
        inputmode={{inputmode}}
        list={{list}}
        max={{max}}
        maxlength={{maxlength}}
        min={{min}}
        minlength={{minlength}}
        multiple={{multiple}}
        pattern={{pattern}}
        spellcheck={{spellcheck}}
        step={{step}}
        tabindex={{tabindex}}
        class={{concat "form-control " inputClass}}>
      {{#if (eq addonPlacement 'after')}}
        {{yield}}
      {{/if}}
    </div>
  {{else}}
      <input
        id={{id}}
        value={{property}}
        oninput={{action "valueChanged" value="target.value"}}
        placeholder={{placeholder}}
        type={{type}}
        disabled={{disabled}}
        readonly={{readonly}}
        autofocus={{autofocus}}
        accept={{accept}}
        autocomplete={{autocomplete}}
        height={{height}}
        width={{width}}
        inputmode={{inputmode}}
        list={{list}}
        max={{max}}
        maxlength={{maxlength}}
        min={{min}}
        minlength={{minlength}}
        multiple={{multiple}}
        pattern={{pattern}}
        spellcheck={{spellcheck}}
        step={{step}}
        tabindex={{tabindex}}
        class={{or inputClass "form-control"}}>
  {{/if}}
{{/lf-input-wrapper}}
