{{#lf-input-wrapper errorMessages=errorMessages label=label}}
  {{#if hasBlock}}
    <div class="input-group">
      {{yield}}
      {{one-way-input
        value=property
        update=(action "valueChanged")
        placeholder=placeholder
        type=type
        class="form-control"
      }}
    </div>
  {{else}}
      {{one-way-input
        value=property
        update=(action "valueChanged")
        placeholder=placeholder
        type=type
        class="form-control"
      }}
  {{/if}}
{{/lf-input-wrapper}}
