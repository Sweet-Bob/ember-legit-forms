<div class="container">
  <h2 id="title">Welcome to Ember</h2>
  {{#lf-form rules=rules as |validateFunction formValid|}}
    {{lf-input
      label="Name"
      property=model.name
      name="name"
      validate=validateFunction
    }}
    {{lf-input
      label="E-mail"
      property=model.email
      name="email"
      validate=validateFunction
    }}
    {{lf-textarea
      label="Description"
      property=model.description
      name="description"
      validate=validateFunction
    }}
    {{lf-input
      label="Your interests"
      property=model.interests
      name="interests"
      validate=validateFunction
    }}

    <button class="btn btn-primary" disabled={{not formValid}}>Submit</button>
  {{/lf-form}}
</div>
